<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24sp"
    tools:context=".onboarding.OnBoarding2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/on_boarding_2_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:layout_marginBottom="48sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:textColor="@color/md_theme_primary"
                android:textFontWeight="600"
                android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                android:text="@string/on_boarding_2_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:text="@string/on_boarding_2_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="8sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4sp"
                android:text="Anterior"
                android:id="@+id/on_boarding_2_anterior"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_arrow_back_24"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/on_boarding_2_siguiente"
                android:layout_marginHorizontal="4sp"
                android:text="Empezar"
                app:icon="@drawable/ic_arrow_forward_24"
                app:iconGravity="end"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>